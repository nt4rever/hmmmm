{
  "$schema": "https://json.schemastore.org/swcrc",
  "sourceMaps": true,
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true
    },
    "baseUrl": "./",
    "paths": {
      "@modules/*": ["src/modules/*"],
      "@services/*": ["src/services/*"],
      "@repositories/*": ["src/repositories/*"],
      "@configs/*": ["src/configs/*"],
      "@constraints/*": ["src/constraints/*"],
      "@custom-types/*": ["src/types/*"],
      "@exception-filters/*": ["src/exception-filters/*"],
      "@interceptors/*": ["src/interceptors/*"],
      "@pipes/*": ["src/pipes/*"],
      "@decorators/*": ["src/decorators/*"],
      "@filters/*": ["src/filters/*"]
    }
  },
  "minify": false
}
